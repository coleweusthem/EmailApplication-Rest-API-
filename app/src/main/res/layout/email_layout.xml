<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="EMAIL Application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etx_name"
        android:hint="Name"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/etx_subject"
        android:hint="Subject"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etx_name"/>
    <EditText
        android:id="@+id/etx_message"
        android:hint="Message"
        android:layout_width="390dp"
        android:layout_height="250dp"
        android:layout_below="@id/etx_subject"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etx_message"
        android:text="SEND"/>

</RelativeLayout>
